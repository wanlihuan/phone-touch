           <LinearLayout 
                android:orientation="horizontal" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                style="@style/SettingItemStyle"
                android:background="@drawable/bg_attachitem_bottom"   
                >
                <ImageView 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:src="@drawable/setting_starpoint"
                     android:visibility="gone"
                    />
               <TextView 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:text="保存上一次面板" 
                    android:layout_weight="1.0" 
                    android:layout_marginLeft="10.0dip"
                    style="@style/SettingItemTitle"/>
                <com.ttlove.widget.SlipButton
                    android:id="@+id/save_old_panel"
                    android:layout_width="80dp" 
                    android:layout_height="27dp"
                    />
            </LinearLayout>
            
           <TextView 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:text="更多..." 
                android:layout_marginTop="20dp"
                style="@style/SettingLabelStyle"/>
           <LinearLayout 
               android:id="@+id/jingPinAppDow" 
                android:orientation="horizontal" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                style="@style/SettingItemStyle"
                android:background="@drawable/bg_attachitem_top" 
                >
                <ImageView 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:src="@drawable/setting_app_download"
                    />
                <LinearLayout android:orientation="vertical" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0">
                    <TextView
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content" 
                        android:text="精品应用下载" 
                        style="@style/SettingItemTitle" />
                    <TextView android:layout_width="fill_parent" 
                        android:layout_height="wrap_content" 
                        android:text="有积分奖励" 
                        style="@style/SettingItemSummer"
                        />
                 </LinearLayout>
                 <ImageView 
                   android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:background="@drawable/s_icon_arrow"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="5dip"
                   />
           </LinearLayout>
           <LinearLayout
                android:id="@+id/root_help" 
                android:orientation="horizontal" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                style="@style/SettingItemStyle"
                android:background="@drawable/bg_attachitem_normal" 
                >
               <ImageView 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:src="@drawable/setting_checkupdate"
                    />
               <TextView 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip"
                    android:text="Root权限说明" 
                    android:layout_weight="1.0"
                    style="@style/SettingItemTitle"/>
               
               <ImageView 
                   android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:background="@drawable/s_icon_arrow"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="5dip"
                   />
            </LinearLayout>
           <LinearLayout 
                android:id="@+id/uninstall_app" 
                android:orientation="horizontal" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                style="@style/SettingItemStyle"
                android:background="@drawable/bg_attachitem_normal" 
                >
                <ImageView 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:src="@drawable/setting_exit"
                    />  
               <TextView
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="卸载该软件" 
                    style="@style/SettingItemTitle"/>
               <ImageView 
                   android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:background="@drawable/s_icon_arrow"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="5dip"
                   />
            </LinearLayout>
           <LinearLayout 
                android:id="@+id/yonghufankui" 
                android:orientation="horizontal" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                style="@style/SettingItemStyle"
                android:background="@drawable/bg_attachitem_bottom" 
                >
                <ImageView 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:src="@drawable/reset_default_icon"
                    />
               <TextView
                   android:id="@+id/item_title"
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip"
                    android:text="用户反馈/检查更新" 
                    style="@style/SettingItemTitle"/>
            </LinearLayout>
            <View 
                android:layout_width="wrap_content" 
                android:layout_height="15dp"
                />
        </LinearLayout>
    </ScrollView>
