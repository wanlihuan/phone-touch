<?xml version="1.0" encoding="utf-8"?>
<com.android.phone.assistant.widget.RootRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" 
    android:id="@+id/root">
    
     <RelativeLayout 
        android:id="@+id/main_parent_viewgroup"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white"
	    android:orientation="vertical" 
	    >
	    
	   <com.ttlove.widget.TitleBar
	       android:id="@+id/home_title_view"
	       android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	       />
	   
	    <View
	        android:id="@+id/divide"
	        android:layout_height="2.0px"
	        android:layout_width="match_parent"
	        android:background="@drawable/title_shadow"
	        android:layout_below="@id/home_title_view"
	     />
	    
	    
	    <RelativeLayout
	        android:id="@+id/body_parent"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:background="@color/white"
	        android:layout_below="@id/divide"
	        android:layout_marginBottom="55dp"
	        >
	       
	        
	        
	    </RelativeLayout>
	    
	    <com.android.phone.assistant.widget.BottomSelectBar 
	        android:id="@+id/bottom_bar_view"
	        android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    android:background="@color/white"
		    android:layout_alignParentBottom="true"
	        />
     </RelativeLayout>
</com.android.phone.assistant.widget.RootRelativeLayout>